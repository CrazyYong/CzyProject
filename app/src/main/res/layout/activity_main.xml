<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.czy.admin.czyproject.Activity.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <Button
        android:id="@+id/main_components_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="四大组件"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="各种控件测试"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_rxjava_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RxJava测试"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_gson_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gson测试"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_create_file_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建一个文件夹"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_content_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ContentProvider测试"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_newwork_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网络编程"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_thread_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多线程"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_proprety_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="性能"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_ipc_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IPC"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/main_io_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IO操作"
        android:textAllCaps="false"
        />
    </LinearLayout>
</ScrollView>
